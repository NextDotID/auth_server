@model string

<div class="authWrapper">
    <img class="errorIcon" src="~/assets/error.svg" alt="">
    <div class="authTitle">Authentication Failed</div>
    <div class="authSubTitle">
        It looks like an unexpected error occurred.<br />
        Please go back and try authenticating again.
    </div>
    <div class="authSubTitle">Error Message: @Model</div>
    <div id="backBtn" class="confirmBtn" onclick="window.location.href = localStorage.getItem('back_url')">Go back</div>
</div>

<script>
    const backBtn = document.querySelector('#backBtn')
    backBtn.addEventListener('click',()=>{
        const url = localStorage.getItem('back_url')
        if(url){
            window.location.href = url
        }else{
            history.go(-1)
        }
    })
</script>
